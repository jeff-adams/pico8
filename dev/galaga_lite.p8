-- updates

function ustate_start()
 -- menu
	ustate=ustate_play
end

function ustate_play()
	-- playing game
	if btn(⬅️) then player.pos.x -= 1 end
	if btn(➡️) then player.pos.x += 1 end
 if btn(⬆️) then player.pos.y -= 1 end
	if btn(⬇️) then player.pos.y += 1 end
end	

function ustate_gameover()
	-- game over 
	ustate=ustate_start
end

