-- draw

function dstate_menu()
	-- draw menu
	dstate=dstate_game
end

function dstate_game()
	-- draw game
	cls(black)
	spr(player.sprite[player.frame],
					player.pos.x,
					player.pos.y,1,1,
					player.isflip)
	print(player.frame)
end
