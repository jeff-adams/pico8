function _init()
	-- initialize game
	ustate=ustate_start
	dstate=dstate_menu
	-- create player
	player={}
	player.sprite={195,193,196}
	player.frame=2
	player.pos={}
	player.pos.x,player.pos.y=40,40
	player.is_hit=false
	player.is_flip=false
	player.lives=3
end

function _update()
	-- update game
	ustate()
end

function _draw()
	-- draw game
	dstate()
end
-->8
-- updates

function ustate_start()
 -- menu
	ustate=ustate_play
end

function ustate_play()
	-- playing game
	if btn(⬅️) then 
		player.pos.x -= 1 
		player.isflip=true
	end
	if btn(➡️) then 
		player.pos.x += 1 
		player.isflip=false
	end
 if btn(⬆️) then 
 	player.pos.y -= 1 
 end
	if btn(⬇️) then 
		player.pos.y += 1
	end
end	

function ustate_gameover()
	-- game over 
	ustate=ustate_start
end

function move_player(_x,_y)
	
end

function animate_player()
	player.frame+=1
	player.frame=(player.frame%3)+1
end
