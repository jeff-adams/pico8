function _init()
	-- initialize game
	ustate=ustate_start
	dstate=dstate_menu
	setcolorenums()
	player={}
	player.sprite={192,193,194}
	player.pos={}
	player.pos.x,player.pos.y=40,40
	player.is_hit=false
	player.lives=3
end

function _update()
	-- update game
	ustate()
end

function _draw()
	-- draw game
	dstate()
end
