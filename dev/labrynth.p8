function _init()
	labx,laby=10,10
end

function _update()

end

function _draw()
	cls()
	drawborders()
	drawlab()
	drawindicators()
end

function drawborders()
	rect(0,0,91,91,5)
	rect(93,0,127,91,5)
	rect(0,101,127,127,5)
end

function drawlab()
	for i=1,7 do
		for j=1,7 do
			local x,y=i*10,j*10
			rectfill(x+1,y+1,x+8,y+8,8)
		end
	end
end

function drawindicators()
	color(10)
	line(labx+12,laby-4,labx+10,laby-6)
	line(labx+14,laby-6)
	line(labx+12,laby-4)
	line(labx+12,laby-5)
end
