function _init()
	--debug
	debug={}
	--mob setup
	mobs={}
	player=add_mob(240,vector2(3,3))
	--directions
	left,right,up,down=vector2(-1,0),vector2(1,0),vector2(0,-1),vector2(0,1)
	--flags
	path,item=0,1
end
