function add_mob(_sprite,_pos)
 mob={
 	sprite=_sprite,
 	pos=_pos,
 	isleft=false
 	}
 add(mobs,mob)
 return mob
end

function draw_mob(_mob)
	spr(_mob.sprite,
		_mob.pos.x*8,
		_mob.pos.y*8,
		1,
		1,
		_mob.isleft)
end
