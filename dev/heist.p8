--tools

function vector2(_x,_y)
	v={x=_x,y=_y}
	return v
end

function addvectors(v1,v2)
	return vector2(v1.x+v2.x,
																v1.y+v2.y)
end

function distance(_pos,_tpos)
	a=_pos.y-_pos.x
	b=_tpos.y-_tpos.x
	dist=sqrt((a^2)+(b^2))
	return dist
end
