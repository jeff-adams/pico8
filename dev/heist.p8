function _update()
	_dir=get_dir()
	if _dir!=nil then
		local dest=addvectors(player.pos,_dir)
		if is_tile(dest,path) then
	 	move_mob(player,dest)
	 	sfx(1)
	 	if is_tile(dest,item) then
	 		sfx(2)
	 		mset(dest.x,dest.y,1)
	 	end
		else
			sfx(0)
		end
	end	
end

function _draw()
	cls(0)
	map()
	foreach(mobs,draw_mob)
	
	--debug
	color(8)
	foreach(debug,print)
end
