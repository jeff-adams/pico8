--mob

function add_mob(_sprite,_pos)
 local _mob={
 	sprite=_sprite,
 	pos=_pos,
 	isleft=false
 	}
 add(mobs,_mob)
 return _mob
end

function draw_mob(_mob)
	spr(_mob.sprite,
		_mob.pos.x*8,
		_mob.pos.y*8,
		1,
		1,
		_mob.isleft)
end

function move_mob(_mob,_dir)
	if _dir.y==0 then
		_mob.isleft=_dir.x<0
	end
	local _dest=addvectors(_mob.pos,_dir)
	--walkable
	if is_tile(_dest,path) then
 	_mob.pos=_dest
 	sfx(1)
 	--item
 	if is_tile(_dest,item) then
 		sfx(2)
			mset(_dest.x,_dest.y,1)
		end
		else
			sfx(0)
	end
	return _mob
end
