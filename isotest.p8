--draw

function draw_map()
	for i=0,mheight do
		for j=0,mwidth do
			local _offset=i%2==0 and 0 or 8
			local _x,_y=j*16+_offset,i*6
			if same_tile(pos,{x=j,y=i}) then
				pal(3,14)
				pal(12,14)
			else
				pal()
			end
			local _s=mtiles[i+j+1]
			spr(_s,_x,_y,2,2)
		end
	end
end
